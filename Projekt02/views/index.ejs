<%- include('head.ejs') %>
<body>
  <h1><%= title %></h1>

  <% if (error) { %>
    <p class="error">Could not add recipe (missing or duplicate name).</p>
  <% } %>

  <form action="/recipes" method="post" class="add-recipe">
    <div>
      <label for="name">Name</label><br>
      <input type="text" id="name" name="name" required>
    </div>
    <div>
      <label for="description">Description</label><br>
      <textarea id="description" name="description" rows="2" required></textarea>
    </div>
    <div>
      <label for="instructions">Instructions</label><br>
      <textarea id="instructions" name="instructions" rows="4"></textarea>
    </div>
    <button type="submit">Add recipe</button>
  </form>

  <p><a href="/recipes">View recipes</a></p>
</body>
</html>